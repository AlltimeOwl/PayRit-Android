<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.mypage.WithdrawalFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back"
        app:title="회원탈퇴"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Suit.SemiBold18" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="페이릿을"
            android:textAppearance="@style/Suit.SemiBold26" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="떠나시는 이유"
                android:textAppearance="@style/Suit.SemiBold26"
                android:textColor="@color/primaryMint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가 있을까요?"
                android:textAppearance="@style/Suit.SemiBold26" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="떠나시는 이유를 알려주세요."
            android:textAppearance="@style/Suit.SemiBold18"
            android:textColor="@color/grayScale05" />

        <Spinner
            android:id="@+id/spinner_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_spinner_gray"
            android:popupBackground="@drawable/bg_gray_scale09_r12" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잠깐!"
                android:textAppearance="@style/Suit.SemiBold18"
                android:textColor="@color/pink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 이렇게 해보시면 어때요?"
                android:textAppearance="@style/Suit.SemiBold18"
                android:textColor="@color/grayScale05" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="16sp"
            android:text="페이릿에서는 금전 거래 약속 관련 법률 정책에 대한\n정보를 쉽게 알 수 있어요! 더 이용해보시겠어요?"
            android:textAppearance="@style/Suit.Medium16"
            android:textColor="@color/grayScale06" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_gray_scale07_r12"
            android:stateListAnimator="@null"
            android:text="탈퇴하기"
            android:textAppearance="@style/Typography.Bold20"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>