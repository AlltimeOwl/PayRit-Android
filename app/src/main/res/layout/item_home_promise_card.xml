<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_home_promise_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_gift"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageView_home_promise_card"
            android:layout_width="175dp"
            android:layout_height="210dp"
            android:src="@drawable/img_gift" />

        <FrameLayout
            android:id="@+id/frameLayout_home_promise_card"
            android:layout_width="175dp"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:padding="14dp"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_my_info_home_promise_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="김페이님과"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/Suit.Bold14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_opponent_info_home_promise_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="박이릿님의 약속"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/Suit.Bold14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_my_info_home_promise_card" />

                <TextView
                    android:id="@+id/textView_amount_home_promise_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="10,000원"
                    android:textAppearance="@style/Suit.Bold18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_detail_home_promise_card"
                android:layout_width="104dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_promise_card_button"
                android:text="내용 보기"
                android:textAppearance="@style/Suit.Bold12" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>