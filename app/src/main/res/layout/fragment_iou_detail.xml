<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.IouDetailFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar_iou_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back"
        app:title="페이릿 상세 페이지"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Suit.SemiBold18"
        app:titleTextColor="@color/black100" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/textView_name_iou_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:text="정주성님께"
                android:textAppearance="@style/Suit.Bold22" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 "
                    android:textAppearance="@style/Suit.Bold22" />

                <TextView
                    android:id="@+id/textView_total_amount_iou_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30,000"
                    android:textAppearance="@style/Suit.Bold22"
                    android:textColor="@color/primaryMint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원을 "
                    android:textAppearance="@style/Suit.Bold22" />

                <TextView
                    android:id="@+id/textView_type_iou_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빌려 주었어요."
                    android:textAppearance="@style/Suit.Bold22" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_function_iou_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/linearLayout_existence_transaction_iou_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="받은 날짜"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Suit.SemiBold18" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="상환 내역"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Suit.SemiBold18" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView_iou_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button_document_iou_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gray_scale05_r20"
                                android:drawableLeft="@drawable/ic_document"
                                android:drawablePadding="4dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:stateListAnimator="@null"
                                android:text="PDF·메일"
                                android:textAppearance="@style/Suit.SemiBold14"
                                android:textColor="@color/white" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button_alarm_iou_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_pink_r20"
                                android:drawableLeft="@drawable/ic_send"
                                android:drawablePadding="4dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:stateListAnimator="@null"
                                android:text="알림 전송"
                                android:textAppearance="@style/Suit.SemiBold14"
                                android:textColor="@color/white" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button_record_iou_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_primary_mint_r20"
                                android:drawableLeft="@drawable/ic_tag"
                                android:drawablePadding="4dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:stateListAnimator="@null"
                                android:text="금액 입력하기"
                                android:textAppearance="@style/Suit.SemiBold14"
                                android:textColor="@color/white" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_summary_iou_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/lightMint"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/textView_period_iou_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="2024.02.26 ~ 2024.03.26"
                                android:textAppearance="@style/Suit.SemiBold12"
                                android:textColor="@color/grayScale02" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="남은 금액"
                            android:textAppearance="@style/Suit.SemiBold14"
                            android:textColor="@color/grayScale02" />

                        <TextView
                            android:id="@+id/textView_remaining_amount_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="30,000원"
                            android:textAppearance="@style/Suit.SemiBold26"
                            android:textColor="@color/black100" />

                        <TextView
                            android:id="@+id/textView_day_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="D - 29"
                            android:textAppearance="@style/Suit.SemiBold14"
                            android:textColor="@color/grayScale02" />

                        <ProgressBar
                            android:id="@+id/progressBar_iou_detail"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="3dp"
                            android:max="100"
                            android:progress="10"
                            android:progressDrawable="@drawable/bg_progress_bar_mint" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="8dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/textView_state_iou_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="상환 진행중"
                                android:textAppearance="@style/Suit.SemiBold12"
                                android:textColor="@color/grayScale04" />

                            <TextView
                                android:id="@+id/textView_percent_iou_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:text="(0%)"
                                android:textAppearance="@style/Suit.SemiBold12"
                                android:textColor="@color/grayScale04" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_iou_detail"
                    android:layout_width="122dp"
                    android:layout_height="155dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_light_mint_r12"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView_enlarge_iou_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="14dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_enlarge"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_iou_detail"
                    app:layout_constraintEnd_toEndOf="@id/imageView_iou_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:elevation="2dp"
                    android:paddingStart="14dp"
                    android:text="차용증\n보기"
                    android:textAppearance="@style/Suit.Bold16"
                    android:textColor="@color/black100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageView_iou_detail" />

                <ImageView
                    android:id="@+id/imageView_memo_iou_detail"
                    android:layout_width="223dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_memo"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView_iou_detail"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:text="개인 메모"
                    android:textAppearance="@style/Suit.Bold16"
                    app:layout_constraintStart_toStartOf="@+id/imageView_memo_iou_detail"
                    app:layout_constraintTop_toTopOf="@+id/imageView_memo_iou_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="42dp"
                    android:elevation="2dp"
                    android:text="최근 날짜의 메모가 요약으로 보여\n집니다."
                    android:textAppearance="@style/Suit.SemiBold14"
                    android:textColor="@color/grayScale05"
                    app:layout_constraintStart_toStartOf="@+id/imageView_memo_iou_detail"
                    app:layout_constraintTop_toTopOf="@+id/imageView_memo_iou_detail" />

                <ImageView
                    android:id="@+id/imageView_memo_count_iou_detail"
                    android:layout_width="223dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_memo_day"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView_iou_detail"
                    app:layout_constraintTop_toBottomOf="@id/imageView_memo_iou_detail" />

                <TextView
                    android:id="@+id/textView_memo_count_iou_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="4dp"
                    android:elevation="2dp"
                    android:text="총 0개의 메모"
                    android:textAppearance="@style/Suit.SemiBold12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView_memo_count_iou_detail"
                    app:layout_constraintTop_toTopOf="@+id/imageView_memo_count_iou_detail" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:text="빌려준 사람"
                android:textAppearance="@style/Suit.SemiBold14"
                android:textColor="@color/grayScale04" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textAppearance="@style/Suit.Medium14" />

                        <TextView
                            android:id="@+id/textView_lend_person_name_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="정주성"
                            android:textAppearance="@style/Suit.Bold16" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연락처"
                            android:textAppearance="@style/Suit.Medium14" />

                        <TextView
                            android:id="@+id/textView_lend_person_phone_number_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:text="010-1234-5678"
                            android:textAppearance="@style/Suit.Bold16" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주소"
                            android:textAppearance="@style/Suit.Medium14" />

                        <TextView
                            android:id="@+id/textView_lend_person_address_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="서울 종로구 종로3길 17 D-타워 17층\n(03155)"
                            android:textAppearance="@style/Suit.Bold16" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:text="빌린 사람"
                android:textAppearance="@style/Suit.SemiBold14"
                android:textColor="@color/grayScale04" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textAppearance="@style/Suit.Medium14" />

                        <TextView
                            android:id="@+id/textView_borrow_person_name_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="정주성"
                            android:textAppearance="@style/Suit.Bold16" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연락처"
                            android:textAppearance="@style/Suit.Medium14" />

                        <TextView
                            android:id="@+id/textView_borrow_person_phone_number_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:text="010-1234-5678"
                            android:textAppearance="@style/Suit.Bold16" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주소"
                            android:textAppearance="@style/Suit.Medium14" />

                        <TextView
                            android:id="@+id/textView_borrow_person_address_iou_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="서울 종로구 종로3길 17 D-타워 17층\n(03155)"
                            android:textAppearance="@style/Suit.Bold16" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
