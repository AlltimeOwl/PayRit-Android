<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white100">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_iou"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_primary_mint_r8">

                <TextView
                    android:id="@+id/textView_repaymentEndDate_iou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="2024.02.26 ~ 2024.03.26"
                    android:textAppearance="@style/Suit.SemiBold12"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_due_date_iou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="D - 29"
                    android:textAppearance="@style/Suit.SemiBold14"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView_amount_iou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="30,000,000원"
                android:textAppearance="@style/Suit.SemiBold26"
                android:textColor="@color/black100" />

            <TextView
                android:id="@+id/textView_peer_name_iou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="정주성"
                android:textAppearance="@style/Suit.SemiBold18"
                android:textColor="@color/grayScale02"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_paper_role_iou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="빌려준 돈"
                android:textAppearance="@style/Suit.Medium16"
                android:textColor="@color/grayScale02" />

            <ProgressBar
                android:id="@+id/progressBar_iou"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:max="100"
                android:progress="10"
                android:progressDrawable="@drawable/bg_progress_bar_mint" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView_paperStatus_iou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승인 대기중"
                    android:textAppearance="@style/Suit.SemiBold12"
                    android:textColor="@color/grayScale04" />

                <TextView
                    android:id="@+id/textView_repayment_rate_iou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="(0%)"
                    android:textAppearance="@style/Suit.SemiBold12"
                    android:textColor="@color/grayScale04" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
