<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_toast_message_interest_rate"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingEnd="18dp"
        android:text="빌려준 날짜부터 갚는 날짜까지의 일수를\n기준으로 계산됩니다."
        android:textAppearance="@style/Suit.Bold12"
        android:textColor="#818181" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingBottom="12dp"
        android:text="예) 원금이 50만 원, 이자율이 2%, 일수가 300일 일 때,\n50만 원*2%*300/365=8,219.17원"
        android:textAppearance="@style/Suit.Medium10"
        android:textColor="#818181" />

</androidx.appcompat.widget.LinearLayoutCompat>