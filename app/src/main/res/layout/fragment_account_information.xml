<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.mypage.AccountInformationFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar_account_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back"
        app:title="계정 정보"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Typography.Medium18" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAppearance="@style/Typography.Bold16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_user_name_account_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_r12"
            android:paddingStart="20dp"
            android:stateListAnimator="@null"
            android:text="정주성"
            android:textAlignment="textStart"
            android:textAppearance="@style/Typography.Medium16"
            android:textColor="#777777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="이메일"
            android:textAppearance="@style/Typography.Bold16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_user_email_account_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_r12"
            android:paddingStart="20dp"
            android:stateListAnimator="@null"
            android:text="wjdwntjd55@naver.com"
            android:textAlignment="textStart"
            android:textAppearance="@style/Typography.Medium16"
            android:textColor="#777777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="휴대폰 번호"
            android:textAppearance="@style/Typography.Bold16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_user_phone_number_account_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_r12"
            android:paddingStart="20dp"
            android:stateListAnimator="@null"
            android:text="01012345678"
            android:textAlignment="textStart"
            android:textAppearance="@style/Typography.Medium16"
            android:textColor="#777777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="연결된 계정"
            android:textAppearance="@style/Typography.Bold16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_user_account_account_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_r12"
            android:paddingStart="20dp"
            android:stateListAnimator="@null"
            android:text="카카오톡"
            android:textAlignment="textStart"
            android:textAppearance="@style/Typography.Medium16"
            android:textColor="#777777" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_user_withdrawal_account_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="회원탈퇴"
            android:textAlignment="center"
            android:textColor="@color/gray200"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>